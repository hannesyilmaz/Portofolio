@model List<ArticleModel>

@{
    ViewBag.Title = "Articles";
}

<h1>Articles</h1>

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <label for="topic">Select a topic:</label>
    <select id="topic" name="topic">
        <option value="">All</option>
        @foreach (var topic in ViewBag.AllTopics)
        {
            if (ViewBag.SelectedTopic == topic)
            {
                <option value="@topic" selected>@topic.Trim()</option>
            }
            else
            {
                <option value="@topic">@topic.Trim()</option>
            }
        }



    </select>
    <label for="sortBy">Sort by:</label>
    <select id="sortBy" name="sortBy">
        @{
            if (ViewBag.SelectedSortBy == "newest")
            {
                <option value="newest" selected>Newest to Oldest</option>
            }
            else
            {
                <option value="newest">Newest to Oldest</option>
            }

            if (ViewBag.SelectedSortBy == "oldest")
            {
                <option value="oldest" selected>Oldest to Newest</option>
            }
            else
            {
                <option value="oldest">Oldest to Newest</option>
            }
        }

    </select>
    <button type="submit">Filter</button>
}

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Summary</th>
            <th>Link</th>
            <th>Published</th>
            <th>Topic</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.Summary</td>
                <td><a href="@article.Link">Link</a></td>
                <td>@article.Published</td>
                <td>@article.Topic</td>
            </tr>
        }
    </tbody>
</table>
